{% extends '@OctopouceBlog/Admin/layout.html.twig' %}

{% block title %}Create tag - {{ parent() }}{% endblock %}

{% block main %}
    <div class="padding-filter">
        <div class="row title">
            <div class="col s12">
                <h1>Create tag</h1>
            </div>
        </div>
        {{ form_start(form) }}
        <div class="row">
            <div class="col s12">
                {% if form.translations|length > 0 %}
                    <ul class="tabs transparent">
                        <li class="tab col s3"><a href="#translations-{{ app.request.locale }}" class="active">{{ app.request.locale }}</a></li>
                        {% for lang, fields in form.translations %}
                            <li class="tab col s3"><a href="#translations-{{ lang }}">{{ lang }}</a></li>
                        {% endfor %}
                    </ul>
                {% endif %}
                <div id="translations-{{ app.request.locale }}">
                    <div class="box">
                        <div class="content">
                            {{ form_row(form.name) }}
                            {{ form_row(form.slug) }}
                        </div>
                    </div>
                </div>
                {% for lang, fields in form.translations if form.translations|length > 0 %}
                    <div id="translations-{{ lang }}">
                        <div class="box">
                            <div class="content">
                                {{ form_row(fields.name) }}
                                {{ form_row(fields.slug) }}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}