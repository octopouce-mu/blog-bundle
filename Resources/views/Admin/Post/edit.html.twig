{% extends '@OctopouceBlog/Admin/layout.html.twig' %}

{% block title %}Edit: {{ post.title }} - {{ parent() }}{% endblock %}

{% block main %}
    <div class="padding-filter">
        <div class="row title">
            <div class="col s12">
                <h1>Edit: {{ post.title }}</h1>
            </div>
        </div>
        {{ form_start(form) }}
        <div class="row">
            <div class="col s9">
                <div class="row">
                    <div class="col s12">
                        <ul class="tabs transparent">
                            <li class="tab col s3"><a href="#post" class="active">Post</a></li>
                            <li class="tab col s3"><a href="#seo">SEO</a></li>
                        </ul>
                    </div>
                    <div id="post" class="col s12">
                        <div class="box">
                            <div class="content">
                                {{ form_row(form.title) }}
                                {{ form_row(form.slug) }}
                            </div>
                        </div>
                        <div class="box">
                            <div class="content">
                                {{ form_row(form.content) }}
                                {{ form_row(form.image) }}
                                {% if post.image %}
                                    <div class="col s6">
                                        <img src="{{ asset(post.image.pathname) }}" alt="" width="100%">
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div id="seo" class="col s12">
                        <div class="box">
                            <div class="content">
                                {{ form_row(form.seoTitle) }}
                                {{ form_row(form.seoDescription) }}
                            </div>
                        </div>
                        <div class="box">
                            <div class="content">
                                {{ form_row(form.seoFacebookTitle) }}
                                {{ form_row(form.seoFacebookDescription) }}
                                {{ form_row(form.seoFacebookImage) }}
                                {% if post.seoFacebookImage %}
                                    <div class="col s3">
                                        <img src="{{ asset(post.seoFacebookImage.pathname) }}" alt="" width="100%">
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="box">
                            <div class="content">
                                {{ form_row(form.seoTwitterTitle) }}
                                {{ form_row(form.seoTwitterDescription) }}
                                {{ form_row(form.seoTwitterImage) }}
                                {% if post.seoTwitterImage %}
                                    <div class="col s3">
                                        <img src="{{ asset(post.seoTwitterImage.pathname) }}" alt="" width="100%">
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>


            </div>
            <div class="col s3">
                <div class="box">
                    <div class="content">
                        {{ form_row(form.enabled) }}
                        {{ form_row(form.publishedAt) }}
                        {{ form_row(form.user) }}
                        {{ form_row(form.submit) }}
                    </div>
                </div>
                <div class="box">
                    <div class="content">
                        {{ form_row(form.categories) }}
                        {{ form_row(form.tags) }}
                    </div>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}