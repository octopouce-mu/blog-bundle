{% extends '@OctopouceBlog/Admin/layout.html.twig' %}

{% block title %}{{ post.title }} - {{ parent() }}{% endblock %}

{% block main %}
    <div class="padding-filter">
        <div class="row">
            {% if post.image %}
                <div class="col s12 m6 l6">
                    <img src="{{ post.image.pathname }}" alt="{{ post.title }}" width="100%">
                </div>
            {% endif %}
            <div class="col s12 {% if post.image %}m6 l6{% endif %}">
                <h2>{{ post.title }}</h2>
                {{ post.content|raw }}
            </div>
        </div>
    </div>
{% endblock %}